{% include 'includes/header.twig' %}

<div class="container">
    <div class="jumbotron center-block">
        <h2 class="text-primary">Log in with your account</h2>
        <form role="form" action="{{ path('login_authorize') }}" method="post">
            {% if error is not empty %}
                <div class="alert alert-dismissible alert-danger">
                    <button type="button" class="close"
                            data-dismiss="alert">&times;</button>
                    {{ error }}
                </div>
            {% endif %}
            <div class="form-group">
                <input class="form-control" id="_username"
                       name="_username" type="text" required
                       placeholder="Username"
                       value="{{ last_username }}">
            </div>
            <div class="form-group">
                <input class="form-control" id="_password"
                       name="_password" required placeholder="Password"
                       type="password"
                       value="">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary col-sm-12"
                       value="Login">
            </div>
            <div class="form-group">
                        <span class="help-block text-right"><a class="btn btn-link"
                                    href="{{ path('help') }}">Need help?</a></span>
            </div>
        </form>
    </div>
</div>

{% include 'includes/footer.twig' %}
