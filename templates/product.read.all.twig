{% include 'includes/header.twig' %}

<div class="container">
    <h1>Products</h1>

    {% for messages in app.session.getFlashBag.get('message') %}
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close"
                    data-dismiss="alert">&times;</button>
            {{ messages }}
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-sm-12">
            <a href="{{ path('product.create') }}" class="btn btn-primary">Create a
                new product</a>
        </div>
    </div>
    <table class="table table-striped table-hover ">
        <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Created</th>
            <th>Updated</th>
            <th>Operations</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id|e }}</td>
                <td>{{ product.title|e }}</td>
                <td>{{ product.created|e }}</td>
                <td>{{ product.updated|e }}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('product.read', {'productId': product.id}) }}" class="btn btn-sm btn-default">View</a>
                        <a href="#"
                           class="btn btn-sm btn-default dropdown-toggle"
                           data-toggle="dropdown" aria-expanded="false"><span
                                    class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('product.update', {'productId': product.id}) }}">Update</a></li>
                            <li><a href="#">Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

{% include 'includes/footer.twig' %}
